# Definition for the mgr3 instance type
heat_template_version: 2015-04-30

parameters:
  stackName:
    type: string
  flavor:
    description: Flavor of the manager3 server
    type: string
  keyName:
    description: Name of an existing ssh keypair
    type: string
  publicNetworkId:
    type: string
  publicSubnetId:
    type: string
  imageId:
    type: string
  instanceName:
    type: string
  pndaSecurityGroupPnda:
    type: string
  logVolumeSize:
    type: number
  externalPublicNetworkId:
    description: Private network for pnda deployment
    type: string

resources:
  mgr3Port:
    type: OS::Neutron::Port
    properties:
      network: { get_param: publicNetworkId }
      fixed_ips:
        - subnet_id: { get_param: publicSubnetId }
      security_groups: [{ get_param: pndaSecurityGroupPnda }]

  floatingIP:
    type: OS::Neutron::FloatingIP
    depends_on: [ mgr3Port ]
    properties:
      floating_network_id: { get_param: externalPublicNetworkId }
      port_id: { get_resource: mgr3Port}

  pndaVolumeLogData:
    type: OS::Cinder::Volume
    properties:
      size: { get_param: logVolumeSize }
      description: Volume for manager3 logs

  pndaVolumeAttachmentLogData:
    type: OS::Cinder::VolumeAttachment
    properties:
      volume_id: { get_resource: pndaVolumeLogData }
      instance_uuid: { get_resource: mgr3Server }


  mgr3Server:
    type: OS::Nova::Server
    depends_on: floatingIP
    properties:
      name: { get_param: instanceName }
      image: { get_param: imageId }
      flavor: { get_param: flavor}
      key_name: { get_param: keyName }
      metadata: {'node_type': 'hadoop-mgr-3',
                 'pnda_cluster': {get_param: stackName},
                 'node_idx': "",
                 'Name': {get_param: instanceName }}
      networks:
        - port: { get_resource: mgr3Port }

outputs:
  serverResource:
    description: Heat resource handle for the Nova compute server
    value:
      {get_resource: mgr3Server}
